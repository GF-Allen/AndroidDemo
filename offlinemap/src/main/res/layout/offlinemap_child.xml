<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/offline_common_title_btn_selector"
    android:paddingLeft="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:text="北京"
            android:textColor="@color/taobao_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/name_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/name"
            android:text="总大小"
            android:textColor="@color/offline_down_size"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/download_progress_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:gravity="center_vertical"
                android:textColor="@color/gary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/download_status_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/offlinearrow_download" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_lite" />

    </RelativeLayout>



</RelativeLayout>